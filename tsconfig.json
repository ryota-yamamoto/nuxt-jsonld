{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib/",
    "target": "es5",
    "sourceMap": false,
    "declaration": true,
    "lib": ["es2015", "es2017", "dom"],
    "types": ["@types/node"],
    "typeRoots": ["types"]
  },
  "include": [
    "src/**/*", "types"
  ],
}
